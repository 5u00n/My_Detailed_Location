<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".ViewData.GatheredDataActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/result_wifi_btn"
        android:fillViewport="true">

        <ListView
            android:id="@+id/result_location_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>

    <Button
        android:id="@+id/result_wifi_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/calculate_location_btn"
        android:layout_gravity="bottom"
        android:text="REFRESH WiFi" />


    <Button
        android:id="@+id/calculate_location_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_above="@+id/return_main_btn"
        android:layout_gravity="bottom"
        android:text="CALCULATE WIFI LOC" />

    <Button
        android:id="@+id/return_main_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:text="GO BACK" />
</RelativeLayout>